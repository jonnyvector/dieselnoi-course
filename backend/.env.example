# Django Settings
DEBUG=False
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=your-app.railway.app,your-domain.com

# Database (Railway will provide this automatically via DATABASE_URL)
DATABASE_URL=postgresql://user:password@host:port/database

# CORS and CSRF (update with your production URLs)
CORS_ALLOWED_ORIGINS=https://your-frontend.railway.app,https://your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-frontend.railway.app,https://your-domain.com

# Frontend URL
FRONTEND_URL=https://your-frontend.railway.app

# Sentry Error Tracking (create account at sentry.io)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Redis (for caching and sessions - Railway provides REDIS_URL automatically)
REDIS_URL=redis://default:password@host:port

# Stripe (use LIVE keys for production, TEST keys for staging)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Mux Video (get from mux.com dashboard)
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret
MUX_WEBHOOK_SECRET=your-mux-webhook-secret

# Mux Signed URLs (REQUIRED for production - prevents video URL sharing/piracy)
# Generate at: https://dashboard.mux.com/settings/signing-keys
MUX_SIGNING_KEY_ID=your-mux-signing-key-id
MUX_SIGNING_KEY_PRIVATE=your-base64-encoded-private-key

# Email Configuration
# Option 1: SendGrid (recommended for production)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Option 2: Gmail SMTP (for development/testing only)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 (for media files storage in production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
